{
	"variables": {
		"salt_version": "",
		"cleanup_pause": "",
		"headless": "true",
		"iso_local": "iso/debian-7.6.0-amd64-netinst.iso"
	},
	"builders": [{
		"type": "vmware-iso",
		"guest_os_type": "debian7-64",
		"http_directory": "debian",
		"iso_urls": [
			"{{user `iso_local`}}",
			"http://cdimage.debian.org/debian-cd/7.6.0/amd64/iso-cd/debian-7.6.0-amd64-netinst.iso"
		],
		"iso_checksum": "12301855952ce5fdc3319ed0c172f352c5223f49",
		"iso_checksum_type": "sha1",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_wait_timeout": "10000s",
		"headless": "{{user `headless`}}",
		"tools_upload_flavor": "linux",
		"boot_command": [
			"<esc><wait>",
			"install",
			" auto",
			" url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg",
			" debian-installer=en_AU",
			" locale=en_AU",
			" keymap=gb",
			" netcfg/get_hostname=vagrant",
			" netcfg/get_domain=vm ",
			"<enter>"
		],
		"shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
		"disk_size": 10140,
		"vmx_data": {
			"memsize": "512",
			"numvcpus": "1"
		}
	}],
	"provisioners": [{
		"type": "shell",
		"environment_vars": [
			"CLEANUP_PAUSE={{user `cleanup_pause`}}",
			"SALT_VERSION={{user `salt_version`}}"
		],
		"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
		"scripts": [
			"script/debian.base.sh",
			"script/vagrant.sh",
			"script/vmtool.sh",
			"script/saltstack.sh",
			"script/minimize.sh",
			"script/cleanup.sh"
		]
	}],
	"post-processors": [{
		"type": "vagrant",
		"keep_input_artifact": false,
		"output": "box/{{.Provider}}/debian76-salt{{user `salt_version`}}.box"
	}]
}
