{
	"variables": {
		"app_name": "wheezy76",
		"salt_version": "",
		"cleanup_pause": "",
		"headless": "true",
		"iso_local": "iso/debian-7.6.0-amd64-netinst.iso"
	},
	"builders": [{
		"type": "vmware-iso",
		"guest_os_type": "debian7-64",
		"http_directory": "debian",
		"iso_urls": [
			"{{user `iso_local`}}",
			"http://cdimage.debian.org/debian-cd/7.6.0/amd64/iso-cd/debian-7.6.0-amd64-netinst.iso"
		],
		"iso_checksum": "12301855952ce5fdc3319ed0c172f352c5223f49",
		"iso_checksum_type": "sha1",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_wait_timeout": "10000s",
		"headless": "{{user `headless`}}",
		"tools_upload_flavor": "linux",
		"boot_command": [
			"<esc><wait>",
			"install",
			" auto",
			" url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg",
			" debian-installer=en_AU",
			" locale=en_AU",
			" keymap=gb",
			" netcfg/get_hostname=vagrant",
			" netcfg/get_domain=vm ",
			"<enter>"
		],
		"shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
		"disk_size": 10140,
		"vmx_data": {
			"memsize": "512",
			"numvcpus": "1"
		}
	},
	{
		"type": "amazon-ebs",
		"ami_name": "ami-{{user `app_name`}}-{{ timestamp }}",
		"instance_type": "t2.micro",
		"region": "ap-southeast-2",
		"source_ami": "ami-99f790a3",
		"ssh_username": "admin"
	}],
	"provisioners": [{
		"type": "shell",
		"inline": "echo 'vagrant' | sudo -S apt-get -y update"
	},
	{
		"type": "shell",
		"override": {
			"vmware-iso": {
				"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
				"environment_vars": [
					"CLEANUP_PAUSE={{user `cleanup_pause`}}",
					"SALT_VERSION={{user `salt_version`}}"
				],
				"scripts": [
					"script/debian.base.sh",
					"script/vagrant.sh",
					"script/vmtool.sh",
					"script/saltstack.sh",
					"script/cleanup.sh"
				]
			},
			"amazon-ebs": {
				"execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
				"environment_vars": [
					"SALT_VERSION={{user `salt_version`}}"
				],
				"scripts": [
					"script/saltstack.sh"
				]
			}
		}
	}],
	"post-processors": [{
		"type": "vagrant",
		"only": ["vmware-iso"],
		"keep_input_artifact": false,
		"output": "box/{{user `app_name`}}-packer.box"
	}]
}
